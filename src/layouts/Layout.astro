---
import Alert from "@components/Alert.astro"
import Navbar from "@components/Navbar.astro"
import { ClientRouter } from "astro:transitions"
import "./global.css"

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" data-theme="twinkling_stars">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Cristhofer Pincetti porfolio" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="preload"
			href="/fonts/SourceSans3-VariableFont_wght.ttf"
			as="font"
			type="font/ttf"
			crossorigin
		/>
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<header class="fixed z-10 w-full">
			<Navbar
				variants={{ variant: "translucent" }}
				class="px-5 xl:mx-auto xl:my-8 xl:max-w-[90%] xl:px-0"
			/>
			<div class="block xl:hidden">
				<div class="stars -z-10" role="banner"></div>
				<div class="twinkling -z-10" role="banner"></div>
			</div>
		</header>
		<main class="relative">
			<slot />
			<div class="stars -z-10" role="banner"></div>
			<div class="twinkling -z-10" role="banner"></div>
		</main>
		<footer class="fixed bottom-0 z-10 w-full lg:absolute">
			<Alert />
		</footer>
	</body>
</html>
